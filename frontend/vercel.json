{
  "buildCommand": "pnpm install --frozen-lockfile && pnpm run build",
  "outputDirectory": "dist",
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://api.onemonth.dev/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/payment_success",
      "destination": "/payment-success",
      "statusCode": 308
    }
  ]
} 